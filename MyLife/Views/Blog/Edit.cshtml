                    return ["undo", "bold", "hr", "datetime","quote", "code", "h1", "h2", "h3", "h4", "h5", "link", "preformatted-text", "code-block", "||", "watch", "fullscreen", "preview"]
                },
                onload: function () {
                    alert(123);
                }
            });
        });
    </script>
}
